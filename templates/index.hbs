{{> header title=title description=description baseUrl=baseUrl url=baseUrl isPost=false}}

<main>
  <div class="container">
    <header>
      <h1>Making things on the internet.</h1>
      <p class="bio">{{description}}</p>
    </header>
  </div>
  
  <h2>Latest Posts</h2>
  <ul class="post-list">
    {{#each posts}}
    <li>
      <h3 class="post-title">
        <a href="{{../baseUrl}}/posts/{{slug}}.html">{{title}}</a>
      </h3>
      <div class="post-meta">
        <time datetime="{{date}}">{{formattedDate}}</time>
        {{#if readTime}}<span> Â· {{readTime}} min read</span>{{/if}}
      </div>
      <div class="post-excerpt">
        <p>{{description}}</p>
      </div>
    </li>
    {{/each}}
  </ul>
</main>

{{> footer baseUrl=baseUrl}} 