{{> header title="Jordan Joe Cooper's Blog" description="Personal blog about technology, thoughts, and experiences" baseUrl=baseUrl url=baseUrl isPost=false}}

<main>
  <h1>Welcome to My Blog</h1>
  <p>Thoughts on technology, life, and everything in between.</p>
  
  <h2>Latest Posts</h2>
  <ul class="post-list">
    {{#each posts}}
    <li>
      <h3 class="post-title">
        <a href="{{../baseUrl}}/posts/{{slug}}.html">{{title}}</a>
      </h3>
      <div class="post-meta">
        <time datetime="{{date}}">{{formattedDate}}</time>
        {{#if readTime}}<span> Â· {{readTime}} min read</span>{{/if}}
      </div>
      <div class="post-excerpt">
        <p>{{description}}</p>
      </div>
    </li>
    {{/each}}
  </ul>
</main>

{{> footer baseUrl=baseUrl}} 